<% content_for(:title) { t(".header_title") } %>
<% content_for(:description) { t(".header_body") } %>

<%= render partial: "layouts/topper", locals: {type: "products", title: t(".header_title"), body: t(".header_body")} %>

<section class="l-content l-content--light l-content--md bb">
  <div class="container text-center">
    <div class="row justify-content-center">
      <% @logos.each do |logo| %>
      <div class="col-md-2 col-4">
        <%= image_tag logo["image"], alt: logo["name"], class: "w-100" %>
      </div>
      <% end %>
    </div>
    <div class="row justify-content-center justify-content-center">
      <div class="col-md-8">
        <p class="text-muted mb-0"><%= t(".product_logos") %></p>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--md l-content--white l-content--bordered">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-6 col-lg-4">
        <%= image_path('backgrounds/portrait/supplements.jpg', class: "l-content__section__image") %>
      </div>
      <div class="col-md-6 col-lg-8">
        <div class="container">
          <div class="my-4 my-4">
            <h4><%= t(".about_supplements_title") %></h4>
            <p class="text-muted"><%= t(".about_supplements_1") %></p>
            <p class="text-muted"><%= t(".about_supplements_2") %></p>
            <div class="row">
              <div class="col-md-9">
                <div class="alert alert-primary">
                  <h6 class="text-uppercase font-weight-bold"><%= t(".about_supplements_alert_title") %></h6>
                  <div class="text-sm"><%= t(".about_supplements_alert_body") %></div>
                </div>
              </div>
            </div>
            <a href="https://ca.fullscript.com/welcome/oakclinic" target="_blank" class="btn btn-primary"><%= t(".fullscript_cta") %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--xx l-content--white l-content--bordered">
  <div class="row no-gutters align-items-center">
    <div class="col-md-6 col-lg-4 order-sm-12">
      <div style='background-image: url("<%= image_path('backgrounds/portrait/dispensary.jpg') %>");' class="l-content__section__image"></div>
    </div>
    <div class="col-md-6 col-lg-8 order-sm-1">
      <div class="container">
        <div class="my-4 my-4">
          <h4><%= t(".about_dispensary_title") %></h4>
          <p class="text-muted"><%= t(".about_dispensary_1") %></p>
          <p class="text-muted"><%= t(".about_dispensary_2") %></p>
        </div>
      </div>
    </div>
  </div>
</section>
