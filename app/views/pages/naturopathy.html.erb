  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="l-content__body">
          <h4><%= t('.s_one_title_three') %></h4>
          <p><%= t('.s_one_body_three_1').gsub(/\n/, '<br/>').html_safe %></p>
