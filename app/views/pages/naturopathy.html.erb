<% content_for(:title) { t(".header_title") } %>
<% content_for(:description) { t(".header_body") } %>

<%= render partial: "layouts/topper", locals: {type: "naturopathy-1", title: t(".header_title"), body: t(".header_body")} %>

<section class="l-content l-content--white l-content--bordered l-content--lg">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="l-content__body">
          <h4><%= t('.s_one_title_one') %></h4>
          <p><%= t('.s_one_body_one').gsub(/\n/, '<br/>').html_safe %></p>
          <br>
          <h4><%= t('.s_one_title_two') %></h4>
          <p><%= t('.s_one_body_two').gsub(/\n/, '<br/>').html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render partial: "layouts/topper", locals: {type: "naturopathy-2", title: nil, body: nil} %>

